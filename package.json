{
    "name": "thesis",
    "version": "0.0.0",
    "description": "Design of an extensible system for analysing and manipulating natural language",
    "keywords": [],
    "private": true,
    "author": "Titus Wormer <tituswormer@gmail.com>",
    "license": "Copyright 2014 Titus Wormer",
    "repository": {
      "type": "git",
      "url": "https://github.com/wooorm/thesis.git"
    },
    "scripts": {
      "make": "npm run build",
      "prebuild": "npm run makedir && npm run copydir",
      "postbuild": "npm run move && npm run removedir",
      "build": "npm run concat && npm run transform && npm run output && npm run bibliography && npm run add-glossary && npm run output",
      "makedir": "mkdir intermediate || exit 0",
      "copydir": "cp paper/* intermediate",
      "move": "mv intermediate/paper.pdf paper.pdf",
      "removedir": "rm -rf intermediate",
      "transform-acknowledgments": "pandoc --smart --parse-raw --no-highlight --normalize --biblatex -o intermediate/1.acknowledgments.tex metadata.markdown 1.front_matter/1.acknowledgments.markdown",
      "transform-dedication": "pandoc --smart --parse-raw --no-highlight --normalize --biblatex -o intermediate/2.dedication.tex metadata.markdown 1.front_matter/2.dedication.markdown",
      "transform-abstract": "pandoc --smart --parse-raw --no-highlight --normalize --biblatex -o intermediate/3.abstract.tex metadata.markdown 1.front_matter/3.abstract.markdown",
      "transform-introduction": "pandoc --smart --parse-raw --no-highlight --normalize --biblatex -o intermediate/4.introduction.tex metadata.markdown 1.front_matter/4.introduction.markdown",
      "transform-body": "pandoc --smart --parse-raw --no-highlight --normalize --biblatex -o intermediate/body.tex metadata.markdown 2.body/2.body.markdown",
      "transform": "npm run transform-acknowledgments && npm run transform-dedication && npm run transform-abstract && npm run transform-introduction && npm run transform-body",
      "bibliography": "cd intermediate && biber paper && cd ../",
      "output": "pdflatex -interaction=nonstopmode -output-directory=intermediate paper.tex || exit 0",
      "add-glossary": "makeglossaries -d intermediate paper"
    }
}